[Unit]
Description=CardMint Print Agent (Fedora workstation)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/cardmint/print-agent
EnvironmentFile=/opt/cardmint/print-agent/.env
ExecStart=/usr/bin/node /opt/cardmint/print-agent/dist/index.js
Restart=always
RestartSec=5

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=full
ProtectHome=true

[Install]
WantedBy=multi-user.target

