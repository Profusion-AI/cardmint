# VLM Optimization Feature Flags
# 
# SAFETY FIRST: All flags default to disabled/safe values
# Only enable after thorough testing in shadow mode

# Master switch for VLM functionality (default: false)
VLM_ENABLED=false

# Run VLM in parallel without affecting production (default: false)
# When true, VLM runs but results are not used
VLM_SHADOW_MODE=false

# Percentage of requests to use VLM (0-100, default: 0)
# Gradual rollout: 0 -> 1 -> 5 -> 20 -> 50 -> 100
VLM_PERCENTAGE=0

# Automatic fallback to OCR on VLM failure (default: true)
# Set to false only when VLM is proven stable
LEGACY_FALLBACK=true

# Emergency kill switch to disable all VLM instantly (default: false)
# Set to true in case of critical issues
VLM_EMERGENCY_KILL=false

# Performance thresholds for automatic rollback
VLM_MAX_PROCESSING_TIME=10000  # 10 seconds
VLM_MAX_MEMORY_MB=7000         # 7GB
VLM_MAX_CPU_PERCENT=80         # 80%
VLM_MIN_SUCCESS_RATE=0.95      # 95%

# Model configuration
VLM_MODEL_PATH=/home/profusionai/CardMint/models/vlm/SmolVLM-500M-Instruct
VLM_USE_INTEL_OPTIMIZATION=true
VLM_USE_INT8_QUANTIZATION=false
VLM_USE_OPENVINO=false

# Monitoring and logging
VLM_LOG_LEVEL=info
VLM_METRICS_ENABLED=true
VLM_METRICS_INTERVAL=60  # seconds

# Cache configuration
VLM_CACHE_ENABLED=true
VLM_CACHE_TTL=3600  # 1 hour
VLM_CACHE_MAX_ITEMS=1000