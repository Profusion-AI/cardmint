[Unit]
Description=CardMint Daily Archive Timer - Run at 4:30 PM
Documentation=file:///home/profusionai/CardMint/scripts/daily-archive.sh
Requires=cardmint-archive.service

[Timer]
# Run daily at 4:30 PM (16:30)
OnCalendar=*-*-* 16:30:00

# If system was off, run on next boot (within 1 hour)
Persistent=true

# Prevent multiple simultaneous runs
PreventOverruns=true

# Randomize start time by up to 5 minutes to prevent system load spikes
RandomizedDelaySec=300

[Install]
WantedBy=timers.target